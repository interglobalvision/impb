{
  "name": "Internet Movie Pirate Bay",
  "short_name": "IMPB",
  "author": "Interglobal Vision",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Internet Movie Pirate Bay lists the top 10 Pirate Bay torrents for any movie directly on it's IMDB page.",
  "homepage_url": "http://interglobal.vision",
  "permissions": [
    "https://thepiratebay.org/search/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.imdb.com/title/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}